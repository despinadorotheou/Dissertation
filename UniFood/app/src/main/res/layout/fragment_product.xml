<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/product_img"
        android:layout_width="201dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/account" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_below="@+id/product_img"
        android:layout_alignStart="@+id/product_img"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:layout_alignLeft="@+id/product_img"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/product_descriptiom"
        android:layout_width="299dp"
        android:layout_height="96dp"
        android:layout_above="@+id/add_basket_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginBottom="-3dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="93dp"
        android:layout_height="24dp"
        android:layout_above="@+id/product_descriptiom"
        android:layout_below="@+id/product_name"
        android:layout_alignStart="@+id/product_descriptiom"
        android:layout_marginTop="40dp"
        android:text="Description"
        android:layout_alignLeft="@+id/product_descriptiom" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_above="@+id/product_descriptiom"
        android:layout_below="@+id/product_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="44dp"
        android:text="TextView" />

    <Button
        android:id="@+id/add_basket_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-33dp"
        android:layout_marginBottom="58dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="Add to the Basket"
        android:layout_marginLeft="-33dp"
        android:layout_toRightOf="@+id/textView14" />

</RelativeLayout>