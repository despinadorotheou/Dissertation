<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:id="@+id/product_img"
        android:layout_width="201dp"
        android:layout_height="182dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="87dp"
        android:layout_marginLeft="87dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        app:srcCompat="@drawable/account" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_img"
        android:layout_alignStart="@+id/product_img"
        android:layout_alignLeft="@+id/product_img"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="1dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/product_descriptiom"
        android:layout_width="299dp"
        android:layout_height="96dp"
        android:layout_above="@+id/add_basket_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="27dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="95dp"
        android:layout_height="22dp"
        android:layout_above="@+id/product_descriptiom"
        android:layout_alignStart="@+id/product_descriptiom"
        android:text="Description" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_below="@+id/product_name"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <Button
        android:id="@+id/add_basket_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-33dp"
        android:layout_marginBottom="58dp"
        android:layout_toEndOf="@+id/textView14"
        android:text="Add to the Basket"
        android:layout_marginLeft="-33dp"
        android:layout_toRightOf="@+id/textView14" />

</RelativeLayout>